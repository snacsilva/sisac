<%= form_for(@class) do |f| %>
  <% if @class.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@class.errors.count, "error") %> prohibited this class from being saved:</h2>

      <ul>
      <% @class.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group row">
    <%= f.label :codigo, "Código", :class => 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
        <%= f.text_field :codigo, :class => 'form-control', :placeholder =>"Código"%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :discipline_id, "Disciplina", :class => 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
        <%= f.collection_select(:discipline_id, Discipline.all, :id, :nome, {include_blank: true}, {class: "form-control"}) %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :course_id, "Curso", :class => 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
        <%= f.collection_select(:course_id, Course.all, :id, :nome, {include_blank: true}, {class: "form-control"}) %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :num_aluno, "Limite de Alunos", :class => 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
        <%= f.text_field :num_aluno, :class => 'form-control', :placeholder =>"Quantidade"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
        <%= link_to "Cancelar", classes_path, :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
