<p id="notice"><%= notice %></p>

<h1>Turmas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cód</th>
      <th>Nome</th>
      <th>Disciplina</th>
      <th>Curso</th>
      <th>Professor</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @classes.each do |classe| %>
      <tr>
        <th scope="row"><%= classe.id %></th>
        <td><%= classe.codigo %></td>
        <td><%= classe.discipline.nome %></td>
        <td><%= classe.course.nome %></td>
        <td><%= classe.professor %></td>
        <td>
          <%= link_to ' Exibir', classe, :class => 'btn btn-primary btn-sm glyphicon glyphicon-eye-open' %>
          <%= link_to ' Editar', edit_classe_path(classe), :class => 'btn btn-primary btn-sm glyphicon glyphicon-pencil' %>
          <%= link_to ' Excluir', classe, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'btn btn-danger btn-sm glyphicon glyphicon-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Cadastrar Turma", new_classe_path, :class => 'btn btn-primary' %>