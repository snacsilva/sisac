<p id="notice"><%= notice %></p>

<h1>Professores</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cód</th>
      <th>Nome</th>
      <th>Curso</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <th scope="row"><%= professor.id %></th>
        <td><%= professor.employee.user.name %></td>
        <td><%= professor.course.nome %></td>
        <td>
          <%= link_to ' Exibir', professor, :class => 'btn btn-primary btn-sm glyphicon glyphicon-eye-open' %>
          <%= link_to ' Editar', edit_professor_path(professor), :class => 'btn btn-primary btn-sm glyphicon glyphicon-pencil' %>
          <%= link_to ' Excluir', professor, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'btn btn-danger btn-sm glyphicon glyphicon-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to "Cadastrar Professor", new_professor_path, :class => 'btn btn-primary' %>
