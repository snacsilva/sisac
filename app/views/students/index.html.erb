<p id="notice"><%= notice %></p>

<h1>Alunos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cód</th>
      <th>Nome</th>
      <th>Curso</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <th scope="row"><%= student.id %></th>
        <td><%= student.user.name %></td>
        <td>
          <% if (student.course != nil) %>
            <%= student.course.nome %>
          <% end %>
        </td>
        <td>
          <%= link_to ' Exibir', student, :class => 'btn btn-primary btn-sm glyphicon glyphicon-eye-open' %>
          <%= link_to ' Editar', edit_student_path(student), :class => 'btn btn-primary btn-sm glyphicon glyphicon-pencil' %>
          <%= link_to ' Excluir', student, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'btn btn-danger btn-sm glyphicon glyphicon-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Cadastrar Aluno", new_student_path, :class => 'btn btn-primary' %>
