<p id="notice"><%= notice %></p>

<h1>Disciplinas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cód</th>
      <th>Nome</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <th scope="row"><%= discipline.id %></th>
        <td><%= discipline.nome %></td>
        <td>
          <%= link_to ' Exibir', discipline, :class => 'btn btn-primary btn-sm glyphicon glyphicon-eye-open' %>
          <%= link_to ' Editar', edit_discipline_path(discipline), :class => 'btn btn-primary btn-sm glyphicon glyphicon-pencil' %>
          <%= link_to ' Excluir', discipline, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'btn btn-danger btn-sm glyphicon glyphicon-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Cadastrar Disciplina", new_discipline_path, :class => 'btn btn-primary' %>
