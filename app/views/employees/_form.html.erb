<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group row">
      <%= f.label :sector_id, "Setor", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.collection_select(:sector_id, Sector.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :function %>
      <div class="col-sm-10">
        <%= f.select :function, Employee.functions.keys.to_a, :prompt => 'Please select'%>
      </div>
    </div>

  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
        <%= link_to "Cancelar", employees_path(@employee), :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
