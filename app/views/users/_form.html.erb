<%= simple_form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group row">
      <%= f.label :name, "Nome", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => 'form-control', :placeholder =>"Nome"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :data_nascimento, "Data de Nascimento", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.date_select :data_nascimento, start_year: 1950 %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :num_identidade, "Identidade", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :num_identidade, :class => 'form-control', :placeholder =>"Identidade"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :cpf, "CPF", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :cpf, :class => 'form-control', :placeholder =>"CPF"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :cidade, "Cidade", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :cidade, :class => 'form-control', :placeholder =>"Cidade"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :estado, "Estado", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :estado, :class => 'form-control', :placeholder =>"Estado"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :telefone, "Telefone", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :telefone, :class => 'form-control', :placeholder =>"Telefone"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :celular, "Celular", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :celular, :class => 'form-control', :placeholder =>"Celular"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, "E-mail", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :email, :class => 'form-control', :placeholder =>"E-mail"%>
      </div>
  </div>
  <div class="form-group row">
      <%= f.label :login, "Login", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :login, :class => 'form-control', :placeholder =>"Login"%>
      </div>
  </div>
  <div class="form-group row">
      <%= f.label :passwd, "Senha", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.password_field :passwd, :class => 'form-control' %>
      </div>
  </div>
  <div class="form-group row">
      <%= f.label :passwd_conformation, "Confirmar Senha", :class => 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.password_field :passwd_conformation, :class => 'form-control'%>
      </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
        <%= link_to "Cancelar", users_path(@user), :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
